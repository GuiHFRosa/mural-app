<div id="<%= dom_id mural_item %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= mural_item.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= mural_item.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this mural item", mural_item, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this mural item', edit_mural_item_path(mural_item), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
